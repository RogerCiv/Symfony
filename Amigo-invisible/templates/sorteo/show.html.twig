{% extends 'base.html.twig' %}

{% block title %}Sorteo{% endblock %}

{% block body %}
    <h1>Sorteo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sorteo.id }}</td>
            </tr>
            <tr>
                <th>PresupuestoRegalo</th>
                <td>{{ sorteo.presupuestoRegalo }}</td>
            </tr>
            <tr>
                <th>FechaSorteo</th>
                <td>{{ sorteo.fechaSorteo ? sorteo.fechaSorteo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('app_sorteo_manual', {'id': sorteo.id}) }}" method="post">
        <button type="submit">Sortear Emparejamientos</button>
    </form>
    
  <h2>Usuarios Asignados:</h2>
  <ul>
    {% for usuario in sorteo.usuarios %}
        <li>{{ usuario.username }} - {% if usuario.usuarioAsignado is not null %}{{ usuario.usuarioAsignado.username }}{% endif %}</li>
    {% endfor %}
</ul>


    <a href="{{ path('app_sorteo_index') }}">back to list</a>

    <a href="{{ path('app_sorteo_edit', {'id': sorteo.id}) }}">edit</a>

    {{ include('sorteo/_delete_form.html.twig') }}
{% endblock %}
