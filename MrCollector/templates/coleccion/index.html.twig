{% extends 'base.html.twig' %}

{% block title %}Coleccion index{% endblock %}

{% block body %}
    <h1>Coleccion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coleccion in coleccions %}
            <tr>
                <td>{{ coleccion.id }}</td>
                <td>{{ coleccion.nombre }}</td>
                <td>
                    <a href="{{ path('app_coleccion_show', {'id': coleccion.id}) }}">show</a>
                    <a href="{{ path('app_coleccion_edit', {'id': coleccion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coleccion_new') }}">Create new</a>
{% endblock %}
